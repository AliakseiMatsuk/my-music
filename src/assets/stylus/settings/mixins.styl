closeButton($widthButton = 6.5rem, $heightButton = 4.5rem, $widthIcon = 2.5rem, $heightIcon = .1rem, $color = $bg-color-primary)
  position absolute
  width $widthButton
  height $heightButton
  top 11px
  right 11px
  &:before
  &:after
    display block
    content ""
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto
    width $widthIcon
    height $heightIcon
    background $color
    trbg(.3s)
  &:before
    transform: rotate(45deg) translateZ(0)
  &:after
    transform: rotate(-45deg) translateZ(0)
  .desktop &
    &:hover
      &:before
      &:after
        background $bg-color-lighter
  &:focus
    &:before
    &:after
      background $bg-color-lighter
